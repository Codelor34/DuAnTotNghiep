@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<DuAnTotNghiep.Models.SanPham>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    List<string> extensions = new List<string>() { ".jpg", ".png", ".tiff", ".gif", "jpeg" };
}

<h1>Danh sách sản phẩm</h1>

<div class="container-fluid text-center">
    <div class="row">
        <div class="col">
            <div class="btn btn-primary p-3"><a asp-controller="ChatLieu" asp-action="Index">Quản lý chất liệu</a></div>
        </div>
        <div class="col">
            <div class="btn btn-secondary p-3"><a>Quản lý hãng sản xuất</a></div>
        </div>
        <div class="col">
            <div class="btn btn-success p-3"><a>Quản lý quốc gia</a></div>
        </div>
        <div class="col">
            <div class="btn btn-danger p-3"><a>Quản lý loại sản phẩm</a></div>
        </div>
        <div class="col">
            <div class="btn btn-warning p-3"><a>Quản lý loại đối tượng</a></div>
        </div>
        <div class="col">
            <div class="btn btn-info p-3"><a asp-controller="MauSac" asp-action="Index">Quản lý màu sắc</a></div>
        </div>
        <div class="col">
            <div class="btn btn-light p-3"><a>Quản lý kích thước</a></div>
        </div>
    </div>
</div>
<hr />
<p>
    <a asp-action="Create">Tạo mới sản phẩm</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoTa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnhDaiDien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DanhGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HoTenAdmin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChatLieu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HangSX)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuocGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoaiSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoaiDt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MauSac)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KichThuoc)
            </th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gia)
                </td>
                <td>
                    @{
                        var extension = System.IO.Path.GetExtension(item.AnhDaiDien); // Lấy đuôi ảnh
                    }
                    @if (@extensions.Contains(extension))
                    {
                        <img src="~/img/@item.AnhDaiDien" height="150px">
                    }
                    else
                    {
                        <img src="https://www.google.com/url?sa=i&url=https%3A%2F%2Fwww.facebook.com%2Finternetexplorerbeta%2Fposts%2Fanh-li%25C3%25AAm-gi%25C3%25A0nh-cup-v%25C3%25A0ng-th%25E1%25BB%2583-hi%25E1%25BB%2587n-%25C4%2591%25E1%25BA%25B3ng-c%25E1%25BA%25A5p-out-tr%25C3%25ACnh-to%25C3%25A0n-b%25E1%25BB%2599-c%25C3%25A1c-%25C4%2591%25E1%25BB%2591i-th%25E1%25BB%25A7-%25C4%2591%25E1%25BA%25BFn-t%25E1%25BB%25AB-n%2F728945255938708%2F&psig=AOvVaw2HlyEieUFs1K1YDTZcAllt&ust=1711695350707000&source=images&cd=vfe&opi=89978449&ved=0CBIQjRxqFwoTCKCm15ywloUDFQAAAAAdAAAAABAE">
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DanhGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTenAdmin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChatLieu.ID_ChatLieu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HangSX.ID_Hang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuocGia.ID_QuocGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoaiSP.ID_LoaiSp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoaiDt.ID_LoaiDt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MauSac.ID_MauSac)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KichThuoc.ID_KichThuoc)
                </td>
                <td>
                    <a class="badge bg-primary" asp-action="Edit" asp-route-id="@item.ID_Sp">Edit</a> |
                    <a class="badge bg-info" asp-action="Details" asp-route-id="@item.ID_Sp">Details</a> |
                    <a class="badge bg-danger" asp-action="Delete" asp-route-id="@item.ID_Sp">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
