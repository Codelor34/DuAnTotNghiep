@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<DuAnTotNghiep.Models.User_Khachhang>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KhachHang)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Users.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KhachHang.HoTen)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID_User">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID_User">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID_User">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
