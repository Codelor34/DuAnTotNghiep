@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<DuAnTotNghiep.Models.KhuyenMai>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TruongTrinhKM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoTa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Admins)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TruongTrinhKM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Admins.HoTenAdmin)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID_Km">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID_Km">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID_Km">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
